<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationSequence">
        <operations>
            <!-- Mark of Khorne -->
            <li Class="PatchOperationAddModExtension">
                <xpath>Defs/GeneDef[defName = "BEWH_KhorneMark"]</xpath>
                <value>
                    <li Class="Core40k.DefModExtension_TraitAndGeneOpinion">
                        <godOpinion>
                            <li>Khorne</li>
                        </godOpinion>
                        <opinionDegree>
                            <li>1</li>
                        </opinionDegree>
                        <godWontGift>
                            <li>Tzeentch</li>
                            <li>Nurgle</li>
                            <li>Slaanesh</li>
                        </godWontGift>
                    </li>
                    <li Class="Mutations40k.DefModExtension_ChaosMutation">
                        <givenBy>
                            <li>Khorne</li>
                        </givenBy>
                        <selectionWeight>0.2</selectionWeight>
                    </li>
                </value>
            </li>

        </operations>
    </Operation>

</Patch>