<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <!-- Temporary Power from Gods -->
    <HediffDef>
        <defName>BEWH_GodsTemporaryPower</defName>
        <label>power surge</label>
        <description>This pawn has been filled with power from the gods.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <scenarioCanAdd>false</scenarioCanAdd>
        <everCurableByItem>false</everCurableByItem>
        <maxSeverity>1.0</maxSeverity>
        <isBad>false</isBad>
        <defaultLabelColor>(0.85, 0.85, 0.85)</defaultLabelColor>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-4.0</severityPerDay>
                <showDaysToRecover>true</showDaysToRecover>
            </li>
            <li Class="HediffCompProperties_DisappearsOnDeath"/>
        </comps>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>0.5</offset>
                    </li>
                </capMods>
                <statFactors>
                    <ImmunityGainSpeed>2</ImmunityGainSpeed>
                    <InjuryHealingFactor>10</InjuryHealingFactor>
                    <StaggerDurationFactor>0</StaggerDurationFactor>
                    <MoveSpeed>1.5</MoveSpeed>
                </statFactors>
                <statOffsets>
                    <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
                    <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
                    <ArmorRating_Heat>0.5</ArmorRating_Heat>
                </statOffsets>
            </li>
        </stages>
    </HediffDef>


    <!-- Temporary Curse from Gods -->
    <HediffDef>
        <defName>BEWH_GodsTemporaryCurse</defName>
        <label>cursed by gods</label>
        <description>This pawn has been curse by the gods.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <scenarioCanAdd>false</scenarioCanAdd>
        <everCurableByItem>false</everCurableByItem>
        <maxSeverity>1.0</maxSeverity>
        <isBad>false</isBad>
        <defaultLabelColor>(0.85, 0.85, 0.85)</defaultLabelColor>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-4.0</severityPerDay>
                <showDaysToRecover>true</showDaysToRecover>
            </li>
            <li Class="HediffCompProperties_DisappearsOnDeath"/>
        </comps>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.5</offset>
                    </li>
                </capMods>
                <statFactors>
                    <ImmunityGainSpeed>0.5</ImmunityGainSpeed>
                    <InjuryHealingFactor>0.5</InjuryHealingFactor>
                    <StaggerDurationFactor>2</StaggerDurationFactor>
                    <MoveSpeed>0.5</MoveSpeed>
                </statFactors>
                <statOffsets>
                    <ArmorRating_Blunt>-0.3</ArmorRating_Blunt>
                    <ArmorRating_Sharp>-0.3</ArmorRating_Sharp>
                    <ArmorRating_Heat>-0.3</ArmorRating_Heat>
                </statOffsets>
            </li>
        </stages>
    </HediffDef>

</Defs>