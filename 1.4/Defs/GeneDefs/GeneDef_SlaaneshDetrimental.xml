<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- Jealous visage -->
    <GeneDef ParentName="BEWH_DetrimentalMutationBase">
        <defName>BEWH_SlaaneshJealousVisage</defName>
        <label>mutation: Jealous visage</label>
        <description>This pawn has been mutated and is instilled with the idea that they're owed everything and should have whatever they want, however they often find this to not be the case.</description>
        <iconPath>Placeholder</iconPath>
        <displayOrderInCategory>440</displayOrderInCategory>
        <forcedTraits>
            <li>
                <def>Jealous</def>
            </li>
        </forcedTraits>
        <customEffectDescriptions>
            <li>May have severl mental breakdowns per day, wondering why they don't have everything they want.</li>
        </customEffectDescriptions>
        <mentalBreakMtbDays>0.2</mentalBreakMtbDays>
        <mentalBreakDef>BEWH_JealousVisageWander</mentalBreakDef>
        <modExtensions>
            <li Class="VanillaGenesExpanded.GeneExtension">
                <backgroundPathXenogenes>UI/Icons/Genes/GeneBackground_Slaanesh</backgroundPathXenogenes>
            </li>
            <li Class="Mutations40k.DefModExtension_ChaosMutation">
                <givenBy>
                    <li>Slaanesh</li>
                </givenBy>
            </li>
            <li Class="Core40k.DefModExtension_TraitAndGeneOpinion">
                <godOpinion>
                    <li>
                        <god>Slaanesh</god>
                        <opinion>1</opinion>
                    </li>
                    <li>
                        <god>Khorne</god>
                        <opinion>-1</opinion>
                    </li>
                    <li>
                        <god>Nurgle</god>
                        <opinion>-1</opinion>
                    </li>
                </godOpinion>
            </li>
        </modExtensions>
    </GeneDef>


    <!-- Deadened Senses -->
    <GeneDef ParentName="BEWH_DetrimentalMutationBase">
        <defName>BEWH_SlaaneshDeadenedSenses</defName>
        <label>mutation: Deadened senses</label>
        <description>This pawns sense has been mutated to such a degree that they're now barely functioning.</description>
        <iconPath>Placeholder</iconPath>
        <displayOrderInCategory>440</displayOrderInCategory>
        <capMods>
            <li>
                <capacity>Sight</capacity>
                <postFactor>0.25</postFactor>
            </li>
            <li>
                <capacity>Hearing</capacity>
                <postFactor>0.25</postFactor>
            </li>
            <li>
                <capacity>Talking</capacity>
                <postFactor>0.25</postFactor>
            </li>
        </capMods>
        <modExtensions>
            <li Class="VanillaGenesExpanded.GeneExtension">
                <backgroundPathXenogenes>UI/Icons/Genes/GeneBackground_Slaanesh</backgroundPathXenogenes>
            </li>
            <li Class="Mutations40k.DefModExtension_ChaosMutation">
                <givenBy>
                    <li>Slaanesh</li>
                </givenBy>
            </li>
            <li Class="Core40k.DefModExtension_TraitAndGeneOpinion">
                <godOpinion>
                    <li>
                        <god>Slaanesh</god>
                        <opinion>1</opinion>
                    </li>
                    <li>
                        <god>Khorne</god>
                        <opinion>-1</opinion>
                    </li>
                    <li>
                        <god>Nurgle</god>
                        <opinion>-1</opinion>
                    </li>
                </godOpinion>
            </li>
        </modExtensions>
    </GeneDef>

</Defs>