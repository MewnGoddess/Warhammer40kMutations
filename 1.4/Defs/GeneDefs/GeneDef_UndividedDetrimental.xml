<Defs>

    <!--===== Extra Leg =====-->
    <GeneDef ParentName="BEWH_UndividedDetrimentalMutationBase">
        <defName>BEWH_MutationExtraLeg</defName>
        <label>mutation: Extra leg</label>
        <description>This pawn has mutated an extra leg. It always seems to be a hinderence</description>
        <iconPath>Placeholder</iconPath>
        <displayOrderInCategory>40</displayOrderInCategory>
        <statFactors>
            <MoveSpeed>0.8</MoveSpeed>
        </statFactors>
        <modExtensions>
            <li Class="VanillaGenesExpanded.GeneExtension">
                <backgroundPathXenogenes>UI/Icons/Genes/GeneBackground_Undivided</backgroundPathXenogenes>
            </li>
        </modExtensions>
    </GeneDef>


