<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!--===== Extra Leg =====-->
    <GeneDef ParentName="BEWH_DetrimentalMutationBase">
        <defName>BEWH_MutationExtraLeg</defName>
        <label>mutation: Extra leg</label>
        <description>This pawn has mutated an extra leg. It always seems to be a hinderence</description>
        <iconPath>Placeholder</iconPath>
        <displayOrderInCategory>40</displayOrderInCategory>
        <statFactors>
            <MoveSpeed>0.8</MoveSpeed>
        </statFactors>
        <modExtensions>
            <li Class="VanillaGenesExpanded.GeneExtension">
                <backgroundPathXenogenes>UI/Icons/Genes/GeneBackground_Undivided</backgroundPathXenogenes>
            </li>
            <li Class="Mutations40k.DefModExtension_ChaosMutation">
                <givenBy>
                    <li>Undivided</li>
                    <li>Khorne</li>
                    <li>Tzeentch</li>
                    <li>Nurgle</li>
                    <li>Slaanesh</li>
                </givenBy>
            </li>
            <li Class="Core40k.DefModExtension_TraitAndGeneOpinion">
                <godOpinion>
                    <li>Undivided</li>
                </godOpinion>
                <opinionDegree>
                    <li>1</li>
                </opinionDegree>
            </li>
        </modExtensions>
    </GeneDef>


