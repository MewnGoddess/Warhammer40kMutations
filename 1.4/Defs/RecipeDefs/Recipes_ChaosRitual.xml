<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- Undivided -->
    <RecipeDef ParentName="RitualRecipeBase">
        <defName>BEWH_UndividedGeneralRitual</defName>
        <label>Undivided ritual</label>
        <description>Ask the great undivided for help</description>
        <uiIconThing>BEWH_UndividedRitualSpot</uiIconThing>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Gold</li>
                    </thingDefs>
                </filter>
                <count>25</count>
            </li>
        </ingredients>
        <skillRequirements>
            <Melee>3</Melee>
            <Shooting>3</Shooting>
            <Intellectual>3</Intellectual>
            <Crafting>3</Crafting>
            <Social>3</Social>
            <Artistic>3</Artistic>
            <Plants>3</Plants>
            <Mining>3</Mining>
        </skillRequirements>
        <modExtensions>
            <li Class="Core40k.DefModExtension_Ritual">
                <givesGenes>
                    <li>BEWH_UndividedMark</li>
                </givesGenes>
                <forbiddenGenes>
                    <li>BEWH_UndividedMark</li>
                    <li>BEWH_KhorneMark</li>
                    <li>BEWH_TzeentchMark</li>
                    <li>BEWH_NurgleMark</li>
                    <li>BEWH_SlaaneshMark</li>
                </forbiddenGenes>
            </li>
        </modExtensions>
    </RecipeDef>

